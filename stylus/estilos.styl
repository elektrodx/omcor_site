@import "normalize.styl"
@import "fonts.styl"

cfondo = #E6ECFF
cmenu = #B3B3A1

a
	text-decoration none

body
	background-color cfondo
	font-family 'Roboto Condensed', sans-serif
	font-size 16px
	
.button-menu
	left .5em
	font-size 1.5em
	margin-top -10px
	position absolute
	top 50%
.center-bloque
	margin 0 auto
.contenedor
	padding 1.4em
	font-size 0
	text-align center
.logo
	margin 0
	width 119px
	position absolute	
	
.header
	height 3.5em
	background-color cmenu
	.titulo
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.menu
	display none	
.relative
	position relative
	
.social
	color blue
	float right
	font-size 1.5em
	margin 0
	margin-right 1.5em
	padding 0
	text-decoration none
	li
		padding 0 0.5em 0 0
		display inline
.texto
	font-size 1rem
	text-align left
	